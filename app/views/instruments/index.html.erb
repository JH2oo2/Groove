<h1>INSTRUMENTS FOR RENT</h1>

<% @instruments.each do |instrument| %>
<ul>
    <div class="card-product">
      <%= cl_image_tag instrument.photo.key, height: 300, width: 400, crop: :fill %>
        <div class="card-product-infos">
        <li><%= link_to "#{instrument.name}", instrument_path(instrument.id) %></li>
        </div>
    </div>
  </ul>
<% end %>

<br>
<% if user_signed_in? %>
  <%= link_to "Add new instrument >", new_instrument_path %>
<% end %>
