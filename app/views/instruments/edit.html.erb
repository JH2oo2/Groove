
<div class="edit-body">
<h1>EDIT YOUR INSTRUMENT</h1>
<%= link_to "Back to all instruments", instruments_path, class: "btn-main-back", id: "back-edit" %>
<br>
<br>
<%= simple_form_for(@instrument) do |f| %>
  <%= f.input :name %>
  <%= f.input :available_from %>
  <%= f.input :description %>
  <%= f.input :brand %>
  <%= f.input :price %>
  <%= f.input :city %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
</div>
