<%= link_to "< Back to all instruments ", instruments_path, id: "btn-main-back" %>
<div  class="instrument-new">
<h1>ADD A NEW INSTRUMENT</h1>
  <%= simple_form_for(@instrument) do |f| %>
    <%= f.input :name %>
    <%= f.input :available_from,
                as: :string,
                input_html: { data: { controller: "datepicker" } }%>
    <%= f.input :description %>
    <%= f.input :brand %>
    <%= f.input :price %>
    <%= f.input :city %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
  <% end %>
<br><br>
</div>
