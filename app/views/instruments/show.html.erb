<h1><%= @instrument.name %></h1>


<%= "Description: #{@instrument.description}" %>
<br><%= "Brand: #{@instrument.brand}" %>
<br><%= "Price: #{@instrument.price}" %>
<br><%= "Available from: #{@instrument.available_from}" %>
<%= cl_image_tag @instrument.photo.key, height: 300, width: 400, crop: :fill %>
<br><br>


<% if current_user.id == @instrument.user_id %>
  <%= link_to "🖊️ Edit this instrument offer", edit_instrument_path %>
<br><%= link_to "🗑️ Delete this instrument offer", instrument_path(@instrument.id),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this offer?"} %>
<% else %>
  <%= link_to "Book this instrument! >", new_instrument_booking_path(@instrument.id) %>
<% end %>
<br><br><%= link_to "Back to all instruments on offer >", instruments_path %>
<br>
