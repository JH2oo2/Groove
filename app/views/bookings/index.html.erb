<h1>ALL MY BOOKINGS</h1>

<% @bookings.each do |booking| %>
  <% if current_user.id == booking.user_id %>
    <ul>
      <li><%= "Start date: #{booking.start_date}" %></li>
      <%= "End date: #{booking.end_date}" %>
      <br><%=link_to '🖊️ Edit booking', edit_booking_path(booking.id)%>
      <br><%=link_to '🗑️ Delete booking', booking_path(booking.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?"} %>
    </ul>
  <% end %>
<% end %>
<%= link_to "Back to home page", root_path %>
